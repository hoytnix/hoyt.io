{% extends 'layouts/skeleton.jinja2' %}

{% set title = post %}
{% block meta_description %}{% endblock %}

{% set disqus = {
        'url': url_for(request.endpoint, category_slug=post.category.slug, post_slug=post.slug, _external=True),
        'slug': '/blog/{}/{}'.format(post.category.slug, post.slug)
    }
%}

{% block body %}
    <h1>{{ post }}</h1>
    <ol class="breadcrumb">
        <li><a href="{{ url_for('blog.index') }}">Blog</a></li>
        <li>{{ post.category.href }}</li>
        <li class="active">{{ post }}
    </ol>

    {{ post.body|markdown }}
{% endblock %}
