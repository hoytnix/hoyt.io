{% extends 'layouts/skeleton.jinja2' %}

{% set title = category.title %}
{% block meta_description %}{% endblock %}

{% block body %}
    <h1>{{ category.title }}</h1>
    <ol class="breadcrumb">
        <li><a href="{{ url_for('blog.index') }}">Blog</a></li>
        <li class="active">{{ category }}</li>
    </ol>

    {% for post in category.most_recent_posts %}
        <div class="post-preview">
            <div class="page-header">
                <h2>{{ post.title }} <small>{{ post.category.href }}</small></h2>
            </div>
            <p>{{ post.preview_text|markdown }}</p>

            <div class="post-preview-all-link">
                <a class="btn btn-primary" href="{{ url_for('blog.post_detail', category_slug=post.category.slug, post_slug=post.slug) }}">Read more!</a>
            </div>
        </div>
    {% endfor %}
{% endblock %}
