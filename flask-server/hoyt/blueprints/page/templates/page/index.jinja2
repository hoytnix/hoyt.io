{% extends 'layouts/skeleton.jinja2' %}

{% block body %}
    <div class="container sm-margin-top">
        <div class="col-sm-8">
            <div class="row text-center lg-margin-bottom">
                <h1>Hoyt.IO</h1>
                <h3 class="text-muted">
                    My eponymously titled weblog.
                </h3>
            </div>
            <div class="row text-center">
                <div class="col-sm-6">
                    <i class="fa fa-fw fa-4x icon-github-circled"></i>
                    <h2>Github</h2>
                    <p class="text-muted">Where I Git.</p>
                    <p>
                        <a href="https://github.com/hoytnix" target="_blank" class="btn btn-default">My applications</a>
                    </p>
                </div>
                <div class="col-sm-6">
                    <i class="fa fa-fw fa-4x icon-vector-pencil"></i>
                    <h2>Blog</h2>
                    <p class="text-muted">Where I write.</p>
                    <p>
                        <a href="{{ url_for('blog.index') }}" class="btn btn-default">My publishing</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="fb-page" data-href="https://www.facebook.com/hoytm/" data-tabs="timeline" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/hoytm/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/hoytm/">Michael Hoyt</a></blockquote></div>
        </div>
    </div>
{% endblock %}
