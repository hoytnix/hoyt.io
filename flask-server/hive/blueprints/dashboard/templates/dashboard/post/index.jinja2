{% extends 'layouts/skeleton.jinja2' %}
{% import 'macros/items.html' as items %}
{% import 'macros/form.html' as f with context %}

{% block title %}Admin - Posts / List{% endblock %}

{% block body %}
  <div class="row">
    <div class="col-md-6">
      {{ f.search('dashboard.posts') }}
    </div>
    <div class="col-md-6">
      <a href="{{ url_for('dashboard.posts_new') }}"
         class="btn btn-primary pull-right">
        Create post
      </a>
    </div>
  </div>

  {% if posts.total == 0 %}
    <h3>No results found</h3>

    {% if request.args.get('q') %}
      <p>Try limiting or removing your search terms.</p>
    {% else %}
      <p>
         There are no posts present,
         you should <a href="{{ url_for('dashboard.posts_new') }}">create one</a>.
       </p>
    {% endif %}
  {% else %}
    {% call f.form_tag('dashboard.posts_bulk_delete') %}
      <table class="table table-striped">
        <thead>
          <tr>
            <th>
              <label for="select_all"></label>
              <input id="select_all" name="select_all" type="checkbox">
            </th>
            <th class="col-header">
              {{ items.sort('created_on', 'Created') }}
            </th>
            <th class="col-header">
              {{ items.sort('title') }}
            </th>
            <th class="col-header"><!-- Revise --></th>
            <th class="col-header"><!-- Edit --></th>
          </tr>
        </thead>
        <tbody>
        {% for post in posts.items %}
          <tr>
            <td>
              <label for="bulk_ids"></label>
              <input class="checkbox-item" id="bulk_ids"
                      name="bulk_ids" type="checkbox" value="{{ post.id }}">
            </td>
            <td>
              <time class="from-now"
                    data-datetime="{{ post.created_on }}">
                {% set created_on_s = post.created_on|string %}
                {{ created_on_s[:16] }}
              </time>
            </td>
            <td>
                {{ post.title }}<br/>
            </td>
            <td>
                <a href="{{ url_for('dashboard.posts_revise', id=post.id) }}" class="btn btn-primary">Revise</a>
            </td>
            <td>
                <a href="{{ url_for('dashboard.posts_edit', id=post.id) }}" class="btn btn-primary">Edit</a>
            </td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    {% endcall %}

    {{ items.paginate(posts) }}
  {% endif %}
{% endblock %}
